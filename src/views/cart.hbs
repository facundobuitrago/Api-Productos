    {{#if cart.length}}
    <table class="cart-table">
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Eliminar</th>
        </tr>

        {{#each cart}}
        <tr>
            <td>{{nombre}}</td>
            <td>${{precio}}</td>
            <td>{{quantity}}</td>
            <td>
                <form action="/remove-item" method="POST">
                    <input type="hidden" name="productId" value="{{id}}">
                    <button class="remove-btn">âœ–</button>
                </form>
            </td>
        </tr>
        {{/each}}

        <tr class="total-row">
            <td colspan="3"><strong>Total:</strong></td>
            <td><strong>${{total}}</strong></td>
        </tr>
    </table>

    <a href="/" class="btn-back">Seguir comprando</a>

    {{else}}
    <p class="empty">El carrito estÃ¡ vacÃ­o.</p>
    {{/if}}
</section>

